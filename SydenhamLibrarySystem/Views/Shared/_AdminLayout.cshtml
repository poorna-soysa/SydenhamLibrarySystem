<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    @*  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
    /> *@
    <link href="/css/bootstrap.css" rel="stylesheet" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <link href="~/SydenhamLibrarySystem.styles.css" rel="stylesheet" />

</head>
<body>
    <div class="main-contaier">
        <div class="sidenav bg-primary">
            <a class="navigation-link" href="/Home/Index"><i class="bi bi-house-door"></i> Home</a>
            <a href="/Subject/Index" class="navigation-link"><i class="bi bi-collection"></i> Subject</a>
            <a href="/LibraryItem/Index" class="navigation-link"><i class="bi bi-book"></i> Library Items</a>
            <a href="/AdminOperations/AllReservation" class="navigation-link"><i class="bi bi-receipt"></i> Reservations</a>
            <a href="/Identity/Account/Manage/Index" class="navigation-link"><i class="bi bi-person"></i> My Account</a>
        </div>
        <div class="right-panel">
            <nav class="nav-bar bg-primary">
                <div class="nav-heading"></div>
                <div class="nav-actions">
                    <div class="navigation-link">Welcome @User.Identity?.Name</div>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="navigation-link">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
